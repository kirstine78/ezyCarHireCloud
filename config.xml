<?xml version='1.0' encoding='utf-8'?>
<widget id="edu.holmesglen.KBN7988" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>EzyCarHire</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
		<!-- you can use any density that exists in the Android project -->
		<splash src="www/img/car_splash.png" density="land-hdpi"/>
		<splash src="www/img/car_splash.png" density="land-ldpi"/>
		<splash src="www/img/car_splash.png" density="land-mdpi"/>
		<splash src="www/img/car_splash.png" density="land-xhdpi"/>

		<splash src="www/img/car_splash.png" density="port-hdpi"/>
		<splash src="www/img/car_splash.png" density="port-ldpi"/>
		<splash src="www/img/car_splash.png" density="port-mdpi"/>
		<splash src="www/img/car_splash.png" density="port-xhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
	
	<preference name="SplashScreenDelay" value="10000" />
</widget>
